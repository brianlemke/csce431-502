<div class="container-fluid fill">
  <div class="row-fluid">
    <div class="span12 pagination-centered">
      <%= form_for(@user) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>
        </br>
        <%= f.submit "Save" %>
      <% end %>
    </div>
  </div>
</div>
