<script type="text/javascript">
  $(document).ready(function() {
      $('#timeAndDatePicker').datetimepicker({
          timeFormat: "hh:mm tt",
          dateFormat: "yy-mm-dd",
          showOptions: { direction: "down"},
          beforeShow: function (input, inst) {
              var offset = $(input).offset();
              var height = $(input).height();
              window.setTimeout(function () {
                  inst.dpDiv.css({ top: (offset.top + height + 4) + 'px', left: offset.left + 'px' })
              }, 1);
          }
      });
      $('#timeAndDatePicker2').datetimepicker({
          timeFormat: "hh:mm tt",
          dateFormat: "yy-mm-dd",
          showOptions: { direction: "down"},
          beforeShow: function (input, inst) {
              var offset = $(input).offset();
              var height = $(input).height();
              window.setTimeout(function () {
                  inst.dpDiv.css({ top: (offset.top + height + 4) + 'px', left: offset.left + 'px' })
              }, 1);
          }
      });
  })
</script>

<%= form_for(@poster) do |f| %>
  <% if @poster.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poster.errors.count, "error") %> prohibited this poster from being saved:</h2>

      <ul>
      <% @poster.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row-fluid">
    <div class="span4">
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title , :class => "span12"%>
      </div>
      <br />
      <div class="field">
        <%= f.label :file %>
        <%= f.file_field :file %>
      </div>
      <br />
