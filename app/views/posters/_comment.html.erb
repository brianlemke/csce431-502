<div class="comment">
  <i><%=h comment.name %> says:</i><br />
  <%= simple_format h(comment.body) %>
  <% unless current_account.nil? %>
    <% if current_account.admin? or current_account.name == comment.name %>
      <%= link_to 'Destroy Comment', [comment.poster, comment],
               :confirm => 'Are you sure?',
               :method => :delete %>
    <% end %>
  <% end %>
</div>
